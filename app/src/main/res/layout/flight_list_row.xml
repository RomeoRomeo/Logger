<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_centerHorizontal="true"
    tools:context="org.mtwashingtonsoaring.logger.FlightEditActivity">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewContestNumber"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textSize="36pt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pilotOneName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:paddingTop="8dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/centeredPilotOneName"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pilotTwoName"
        android:layout_centerHorizontal="true"
        android:paddingBottom="8dp"
        android:layout_alignBottom="@+id/textViewContestNumber"
        android:textColor="#000000"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/takeoffTime"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/pilotOneName"
        android:textColor="#000000"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LandingTime"
        android:layout_alignBottom="@+id/textViewContestNumber"
        android:layout_toEndOf="@+id/pilotTwoName"
        android:textColor="#000000"
        />



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Launch"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:id="@+id/launchBtn"
            android:focusable="false"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_border_only"
            android:textAlignment="center"
            />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Land"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:id="@+id/landBtn"
        android:focusable="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="5dp"
        android:background="@drawable/button_border_only"
        android:textAlignment="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/durationTV"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:textColor="#000000"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/flightListLandingTime"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textColor="#000000"
        />







</RelativeLayout>